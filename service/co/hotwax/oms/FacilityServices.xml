<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

    <service verb="check" noun="FacilityType">
        <description>
            This service checks whether a given facility belongs to a specific facility type hierarchy.
            It determines if the facility's type or any of its parent types match the specified parentTypeId.
            The search recurses up the hierarchy, checking up to four levels deep.
        </description>
        <in-parameters>
            <parameter name="facilityId" required="true"/>
            <parameter name="parentTypeId" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="hasFacilityType" type="Boolean">
                <description>
                    true if the facility or one of its parent facility types matches parentTypeId; otherwise, false.
                </description>
            </parameter>
        </out-parameters>
        <actions>
            <set field="hasFacilityType" value="false" type="Boolean"/>
            <entity-find-one entity-name="org.apache.ofbiz.product.facility.Facility" value-field="facility" cache="true"/>
            <if condition="!facility">
                <return/>
            </if>
            <if condition="facility &amp;&amp; parentTypeId.equals(facility.facilityTypeId)">
                <set field="hasFacilityType" value="true" type="Boolean"/>
                <return/>
            </if>
            <set field="facilityTypeId" from="facility.facilityTypeId"/>
            <set field="depth" value="4" type="Integer"/>
            <script>
                while(depth > 0) {
            </script>
            <entity-find-one entity-name="org.apache.ofbiz.product.facility.FacilityType" value-field="facilityType" cache="true">
                <field-map field-name="facilityTypeId" from="facilityTypeId"/>
            </entity-find-one>
            <if condition="!facilityType.parentTypeId">
                <return/>
            </if>
            <if condition="parentTypeId.equals(facilityType?.parentTypeId)">
                <set field="hasFacilityType" value="true" type="Boolean"/>
                <return/>
            </if>
            <set field="facilityTypeId" from="facilityType.parentTypeId"/>
            <script>
                depth--;
                }
            </script>
        </actions>
    </service>
</services>